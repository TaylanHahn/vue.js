<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Tarefas Funcional</title>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.global.min.js"></script>

</head>
<body>

    <div id="app">
        <h1>Minha Lista de Tarefas</h1>

        <form class="input-group" @submit.prevent="addItem">
            <input type="text" v-model="itemAdd" placeholder="Digite uma nova tarefa"/>
            <button class="btn-add">Adicionar</button>
        </form>

        <ul>
            <li v-for="(item, index) in lista" :key="index">
                <span>{{ item.texto }}</span>
                <button class="btn-remove" @click="removeItem(index)">Apagar</button>
            </li>
        </ul>
    </div>

    <script>
        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    itemAdd: '',
                    // 5. Mudei o nome da propriedade para 'texto' para ficar mais claro
                    lista: [
                        { texto: 'Estudar Vue.js' },
                        { texto: 'Fazer o exercício' }
                    ]
                }
            },
            methods: {
                addItem() {
                    if (this.itemAdd.trim() === '') {
                        alert('Você precisa digitar algo!');
                        return;
                    }
                    // Adicionando um objeto com a propriedade 'texto'
                    this.lista.push({
                        texto: this.itemAdd
                    });
                    this.itemAdd = ''; // Limpa o campo após adicionar
                },
                // O método removeItem já estava correto, recebendo o index
                removeItem(index) {
                    // splice remove o item da lista na posição (index) especificada
                    this.lista.splice(index, 1);
                }
            }
        }).mount('#app')
    </script>
</body>
</html>
